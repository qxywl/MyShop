<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhaidou.product.attributies.dao.impl.RelationGroupAttrDaoImpl">
	
	<resultMap type="RelationGroupAttrModel" id="relationGroupAttrModel">
		   <result property="id" column="id" javaType="java.lang.Long" />
		   <result property="groupId" column="group_id" javaType="java.lang.Long" />
		   <result property="groupCode" column="group_code" javaType="java.lang.String" />
		   <result property="attrId" column="attr_id" javaType="java.lang.Long" />
		   <result property="attrCode" column="attr_code" javaType="java.lang.String" />
	</resultMap>
	
    <insert id="insert" parameterType="RelationGroupAttrModel" useGeneratedKeys="true" keyProperty="id">
		
		insert into  t_relation_group_attr
		(
	          			    group_id,
	          			    group_code,
	          			    attr_id,
	          			    attr_code
        )
		values
		(
	          			    #{groupId},
	          			    #{groupCode},
	          			    #{attrId},
          				    #{attrCode}
        )
	</insert>

	<update id="update" parameterType="RelationGroupAttrModel">
		update  t_relation_group_attr t 
		  <set>
			         <if test="groupId != null  and groupId !=''">
				          t.group_id=#{groupId},
				    </if>
			         <if test="groupCode != null  and groupCode !=''">
				          t.group_code=#{groupCode},
				    </if>
			         <if test="attrId != null  and attrId !=''">
				          t.attr_id=#{attrId},
				    </if>
			         <if test="attrCode != null  and attrCode !=''">
				          t.attr_code=#{attrCode}
				    </if>
		    </set>
		where 
		t.id=#{id}
	</update>
	
	
	<delete id="delete" parameterType="java.lang.Long">
    	delete from  t_relation_group_attr  where id =#{id}
    </delete>
    
    
    <delete id="deleteByIds" parameterType="java.util.List">
    	delete from t_relation_group_attr  where 
    	id in
    	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
    </delete>
    
     <delete id="deleteByAttrId" parameterType="java.lang.Long">
    	delete from t_relation_group_attr  where attr_id = #{attrId}
    </delete>
    
    <sql id="query">
	        <if test="id != null and id !=''">
					and t.id=#{id}
		    </if>
	        <if test="groupId != null and groupId !=''">
					and t.group_id=#{groupId}
		    </if>
	        <if test="groupCode != null and groupCode !=''">
		        	and t.group_code like CONCAT(CONCAT('%', #{groupCode}), '%') 
		    </if>
	        <if test="attrId != null and attrId !=''">
					and t.attr_id=#{attrId}
		    </if>
	        <if test="attrCode != null and attrCode !=''">
		        	and t.attr_code like CONCAT(CONCAT('%', #{attrCode}), '%') 
		    </if>
	    
    </sql>


	<select id="queryOne" parameterType="java.lang.Long"
	resultMap="relationGroupAttrModel">
		select
		          id,
		          group_id,
		          group_code,
		          attr_id,
		          attr_code
		from  t_relation_group_attr t
		where t.id=#{id}
	</select>
	
	<select id="queryListPage" parameterType="RelationGroupAttrModel"
		resultMap="relationGroupAttrModel">
		select 
	          id,
	    
	          group_id,
	    
	          group_code,
	    
	          attr_id,
	    
	          attr_code
	     from  t_relation_group_attr t
		 where 1=1
		<include refid="query"/>
	</select>

	<select id="countListPage" parameterType="RelationGroupAttrModel"
		resultType="java.lang.Long">
		select count(1) from  t_relation_group_attr t
		where 1=1
		<include refid="query"/>
	 </select>
	
	<delete id="deleteByAttrIdAndGroupId" parameterType="java.util.Map">
    	delete from t_relation_group_attr  where group_id = #{groupId} and attr_id in 
    	<foreach item="item" index="index" collection="attrIds" open="(" separator="," close=")">
			#{item}
		</foreach>
    </delete>
</mapper>