	<aop:config>
		<aop:pointcut id="pc"
			expression="execution(public * com.zhaidou.product.*.service.*.*(..))" /> <!--把事务控制在Service层 -->
		<aop:advisor pointcut-ref="pc" advice-ref="dbManagerTxAdvice" />
	</aop:config>
	<!-- mybatis config 
	-->
	<bean id="SqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="bonedataSource" />
		<property name="configLocation" value="classpath:config/mybatis/mybatis-cas-config.xml" /> 
		
		<!-- 自动扫描po目录, 省掉Configuration.xml里的手工配置 -->
        <property name="typeAliasesPackage" value="com.zhaidou.product.model" />
		 <!-- 显式指定Mapper文件位置 
        <property name="mapperLocations" value="classpath:config/mybatis/*.xml" />
        -->
        <property name="mapperLocations" value="classpath*:config/mybatis/mapper/*/*.xml"></property>  
        
	</bean>
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate" >
		<constructor-arg index="0" ref="SqlSessionFactory" />
	</bean>
